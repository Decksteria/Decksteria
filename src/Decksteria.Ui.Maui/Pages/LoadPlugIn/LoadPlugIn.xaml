    <Grid BackgroundColor="{DynamicResource PageBackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <VerticalStackLayout>
            <uranium:ExpanderView BackgroundColor="{DynamicResource OnSecondaryContainer}">
                <uranium:ExpanderView.Header>
                    <Label Text="Plug-Ins" FontSize="Title" HorizontalOptions="Center" />
                </uranium:ExpanderView.Header>
                <ListView
                    x:Name="ListView_PlugInSelect"
                    BackgroundColor="{DynamicResource Background}"
                    SelectionMode="Single"
                    Opacity="1">
                    <ListView.Header>
                        <Grid BackgroundColor="{DynamicResource OnSecondaryContainer}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="50" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Text="Select a Plug-In" FontSize="Medium" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" />
                            <ImageButton Grid.Column="1" Source="svgrepo_add.png" Clicked="ListView_PlugInSelect_New_Clicked" />
                        </Grid>
                    </ListView.Header>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:PlugInTile">
                            <ViewCell x:DataType="models:PlugInTile" Tapped="ListView_PlugInSelect_ItemTapped">
                                <Grid Padding="3" ColumnSpacing="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Image Grid.Column="0" Source="{Binding IconImg,Mode=OneWay,Converter={StaticResource ByteArrayToImageSourceConverter}}"/>
                                    <Label
                                        Grid.Column="1"
                                        Text="{Binding DisplayName}"
                                        FontSize="25"
                                        VerticalTextAlignment="Center"
                                        TextColor="{DynamicResource OnPrimaryContainer}"/>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </uranium:ExpanderView>
            <uranium:ExpanderView BackgroundColor="{DynamicResource OnSecondaryContainer}">
                <uranium:ExpanderView.Header>
                    <Label Text="Formats" FontSize="Title" HorizontalOptions="Center" />
                </uranium:ExpanderView.Header>
                <ListView
                    x:Name="ListView_FormatSelect"
                    BindingContext="{x:Reference LoadPlugInPage}"
                    Margin="3"
                    BackgroundColor="{DynamicResource Background}"
                    RowHeight="100"
                    SelectionMode="Single"
                    Opacity="0">
                    <ListView.Header>
                        <Label Text="Select a Format" FontSize="Medium" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" BackgroundColor="{DynamicResource OnSecondaryContainer}"/>
                    </ListView.Header>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:FormatTile">
                            <ViewCell x:DataType="models:FormatTile" Tapped="ListView_FormatSelect_ItemTapped">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Image Grid.Column="0" Source="{Binding IconImg,Mode=OneWay,Converter={StaticResource ByteArrayToImageSourceConverter}}"/>
                                    <Label Grid.Column="1" Text="{Binding DisplayName}" FontSize="25" VerticalTextAlignment="Center" TextColor="{DynamicResource OnPrimaryDark}"/>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </uranium:ExpanderView>
        </VerticalStackLayout>
