<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Decksteria.Ui.Maui.Pages.Deckbuilder.Deckbuilder"
             xmlns:deckbuilder="clr-namespace:Decksteria.Ui.Maui.Pages.Deckbuilder"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:decksteria="clr-namespace:Decksteria.Services.FileService.Models;assembly=Decksteria.Services"
             BackgroundColor="{DynamicResource PageBackgroundColor}"
             x:DataType="deckbuilder:DeckbuilderViewModel"
             Title="Deckbuilder"
             Loaded="ContentPage_LoadedAsync">
    <ContentPage.Resources>
        <DataTemplate x:Name="CollectionView_CardItem" x:Key="CardView" x:DataType="decksteria:CardArt">
            <Image Source="{Binding DownloadUrl}"/>
        </DataTemplate>
    </ContentPage.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <CollectionView x:Name="CollectionView_Search" BackgroundColor="{DynamicResource ContentBackgroundColor}" ItemTemplate="{StaticResource Key=CardView}">
            <CollectionView.Header>
                <Grid Grid.Row="0" HeightRequest="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="80*"/>
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="30" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Text="Search:" HorizontalTextAlignment="End" VerticalTextAlignment="Center"/>
                    <Entry Grid.Column="1" Placeholder="" PlaceholderColor="{DynamicResource PlaceholderTextColor}" HeightRequest="25"/>
                    <ImageButton Grid.Column="2" Source="svgrepo_search.png" />
                    <ImageButton Grid.Column="3" Source="svgrepo_filter.png" />
                </Grid>
            </CollectionView.Header>
        </CollectionView>
        <VerticalStackLayout x:Name="DecksLayout" Grid.Column="1">
            
        </VerticalStackLayout>
    </Grid>
