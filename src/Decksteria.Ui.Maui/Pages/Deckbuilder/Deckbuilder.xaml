<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Decksteria.Ui.Maui.Pages.Deckbuilder.Deckbuilder"
             xmlns:deckbuilder="clr-namespace:Decksteria.Ui.Maui.Pages.Deckbuilder"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:decksteria="clr-namespace:Decksteria.Core.Models;assembly=Decksteria.Core"
             BackgroundColor="{DynamicResource PageBackgroundColor}"
             x:DataType="deckbuilder:DeckbuilderViewModel"
             Title="Deckbuilder"
             Loaded="ContentPage_LoadedAsync">
    <HorizontalStackLayout>
        <toolkit:Expander IsExpanded="True" >
            <CollectionView BackgroundColor="{DynamicResource ContentBackgroundColor}">
                <CollectionView.Header>
                    <Label Text="Search"/>
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="decksteria:CardArt">
                        <Image Source="{Binding ImageUrl}"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </toolkit:Expander>
    </HorizontalStackLayout>
</ContentPage>