<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Decksteria.Ui.Maui.Pages.Deckbuilder.Deckbuilder"
             xmlns:deckbuilder="clr-namespace:Decksteria.Ui.Maui.Pages.Deckbuilder"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:decksteria="clr-namespace:Decksteria.Services.FileService.Models;assembly=Decksteria.Services"
             BackgroundColor="{DynamicResource PageBackgroundColor}"
             x:DataType="deckbuilder:DeckbuilderViewModel"
             Title="Deckbuilder"
             Loaded="ContentPage_LoadedAsync">
    <HorizontalStackLayout>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Text="Search: " />
            <Entry Grid.Column="1" Placeholder="" PlaceholderColor="{DynamicResource PlaceholderTextColor}" />
            <ImageButton Grid.Column="2" />
            <ImageButton Grid.Column="2" />
        </Grid>
        <toolkit:Expander IsExpanded="True" >
            <toolkit:Expander.Header>
                <Button Text="Show Search List" />
            </toolkit:Expander.Header>
            <CollectionView BackgroundColor="{DynamicResource ContentBackgroundColor}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="decksteria:CardArt">
                        <Image Source="{Binding DownloadUrl}"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </toolkit:Expander>
    </HorizontalStackLayout>
</ContentPage>