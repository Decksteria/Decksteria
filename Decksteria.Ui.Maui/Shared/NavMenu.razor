@using Decksteria.Ui.Maui.Pages;
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Decksteria Deckbuilder</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@RouteConstants.PlugInSelect" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> New Deck
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@RouteConstants.SavedDecks">
                <span class="oi oi-copywriting" aria-hidden="true"></span> Saved Decks
            </NavLink>
        </div>
        <hr />
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@RouteConstants.AddPlugIn">
                <span class="oi oi-plus" aria-hidden="true"></span> Add Plug-In
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@RouteConstants.UserSettings">
                <span class="bi bi-gear" aria-hidden="true"></span> User Settings
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
